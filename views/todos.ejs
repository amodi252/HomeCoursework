			<h1>To Do Items</h1>
			<ul class="list-group">
				<div id=todo-list>
					<% todos.forEach(function(todo){ %>
						<li class="list-group-item">
							<table class="table table-hover">
								<tr>
									<td><input type="checkbox"></td>
									<td class="textTd">
										<div contenteditable="true" class="lead"><%= todo.text %></div>
										<div class="selector pull-right">
											<form class="chosenForm edit-item-form" action="/todos/<%=todo._id%>" method="POST">
												<input required="true" type="hidden" name="todo[text]" value="<%= todo.text %>">
												<button class="btn btn-sm btn-warning edit-button">Edit</button>
											</form>
											<form class="delete-item-form" method="POST" action="/todos/<%=todo._id%>">
												<button type="submit" class="btn btn-sm btn-danger">Delete</button>
											</form>
										</div>
									</td>
								</tr>
							</table>
						</li>
					<% }); %>
				</div>
				<li class="list-group-item">
					<table class="table">
						<tr>
							<td><span class="glyphicon glyphicon-plus"></span></td>
							<td class="textTd">
								<h3>Add a new todo!</h3>
								<div id="new" contenteditable="true" class="lead"></div>
								<div class="selector">
									<form class="chosenForm" action="/todos" method="POST" id="new-todo-form">
										<div class="form-group">
											<input required type="hidden" name="todo[text]" class="outofsight" id="new-item">
										</div>
										<button class="btn btn-primary">Create Item</button>
									</form>
								</div>
							</td>
						</tr>
					</table>
				</li>
			</ul>
		</div>
	</table>
